from "../stdlib/Slice.shtk" use Slice, allocateHeap

fn main() -> int
{
    const a := make(Slice[int], [1, 2, 3, 4, 5, 6])

    println(a.capacity())
    println(a[3])

    var b := allocateHeap[int](10)
    b.setItem(4, 5)

    println(b.capacity())
    println(b[4])

    var c := allocateHeap[int](5)
    c.copy([1, 2, 3, 4, 5], 5)

    println(c.capacity())
    println(c[2])
    println(c[3])

    c.copyOffset([7, 8], 2, 2)
    println(c[2])
    println(c[3])

    c.expand(7)
    c.copyOffset([9, 8], 2, 5)
    println(c[5])
    println(c[6])

    return 0
}